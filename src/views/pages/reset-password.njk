{% set Title = 'Login' %}
{% extends 'layouts/authentication.njk' %}

{% block content %}
    <section class="form-with-logo">
        <a href="{{paths.root}}" class="auth-logo"><img src="{{paths.media}}/amana-logo.png" alt="Amana Takaful" class="mb-5"></a>

        <h2 class="fs-2">
            <strong>Reset Password</strong>
        </h2>
        <p class="fs-6 mb-3">It's time to change your password to a new one.</p>
        <form action="">
            <div class="form-floating mb-3">
                <input type="password" class="form-control" id="password" placeholder="Password">
                <label for="password">Password</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" id="confirmPassword" placeholder="Password">
                <label for="confirmPassword">Confirm Password</label>
            </div>
            <button class="btn btn-primary btn-lg w-100 mt-3 cta-btn-shadow">
                <strong>Reset Password</strong>
            </button>
        </form>
    </section>
{% endblock %}